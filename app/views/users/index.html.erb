<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.reverse_each do |post| %>
      <tr>
        <td>
        <% if post.image_uri.attached? %>
        <%= image_tag(post.image_uri) %>
        <% end %>
        <p><%= post.vendor %></p>
        <p><%= post.vendor_loc %></p>
        <p>User ID#: <%= post.user_id %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h4><a href="/users/<%= current_user.id %>/posts/new"> New Post </a></h4>