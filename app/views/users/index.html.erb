<h1>Haute Food13</h1>
<h3>Community Feed</h3>

<p id="notice"><%= notice %></p>

<h5>Posts</h5>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.reverse_each do |post| %>
      <tr>
        <td>
        <% if post.image_uri.attached? %>
        <%= image_tag(post.thumbnail) %>
        <% end %>
        <p><%= post.vendor %></p>
        <p><%= post.vendor_loc %></p>
        <p>User ID#: <%= post.user_id %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h4><a href="/users/<%= current_user.id %>/posts/new"> New Post </a></h4>